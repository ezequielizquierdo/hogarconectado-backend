# Variables de entorno para desarrollo local
NODE_ENV=development
PORT=3000

# Base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/hogarconectado

# Para Railway (configurar en el dashboard):
# NODE_ENV=production
# PORT=3000
# MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/hogarconectado
# BASE_URL=https://tu-app.railway.app

# Factores de precio para cotizaciones
GANANCIA_DEFAULT=0.30
FACTOR_3_CUOTAS=1.1298
FACTOR_6_CUOTAS=1.2138

# JWT para autenticación (opcional)
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui

# Cloudinary para imágenes (opcional - si no se configura, usa almacenamiento local)
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key  
CLOUDINARY_API_SECRET=tu_api_secret

# URL base del servidor (importante para URLs completas de imágenes)
BASE_URL=http://localhost:3000

# En producción, cambiar por tu dominio:
# BASE_URL=https://tu-backend-domain.com

# Configuración de correo (opcional)
EMAIL_SERVICE=gmail
EMAIL_USER=
EMAIL_PASS=

# Rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
